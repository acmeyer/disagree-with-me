// Icons
@import "font-awesome-sprockets";
@import "font-awesome";

@font-face {
  font-family: 'icomoon';
  src:  url(<%= font_url 'icomoon.eot' %>);
  src:  url(<%= font_url 'icomoon.eot' %>#iefix) format('embedded-opentype'),
    url(<%= font_url 'icomoon.ttf' %>) format('truetype'),
    url(<%= font_url 'icomoon.woff' %>) format('woff'),
    url(<%= font_url 'icomoon.svg' %>#icomoon) format('svg');
  font-weight: normal;
  font-style: normal;
}

[class^="icon-"], [class*=" icon-"] {
  /* use !important to prevent issues with browser extensions that change fonts */
  font-family: 'icomoon' !important;
  speak: none;
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-transform: none;
  line-height: 1;

  /* Better Font Rendering =========== */
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-google-colored .path1:before {
  content: "\e900";
  color: rgb(255, 193, 7);
}
.icon-google-colored .path2:before {
  content: "\e901";
  margin-left: -1em;
  color: rgb(255, 61, 0);
}
.icon-google-colored .path3:before {
  content: "\e902";
  margin-left: -1em;
  color: rgb(76, 175, 80);
}
.icon-google-colored .path4:before {
  content: "\e903";
  margin-left: -1em;
  color: rgb(25, 118, 210);
}
.icon-google1:before {
  content: "\ea88";
}


// Load Font
@import url('https://fonts.googleapis.com/css?family=Montserrat:300,400,500,600');

body {
  font-family: Montserrat, $font-family-base !important;
}