    -# %meta{:content => "#ffffff", :name => "theme-color"}/

    = csrf_meta_tags
    = csp_meta_tag

    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'

    = stylesheet_link_tag 'https://unpkg.com/@blueprintjs/core@^3.0.0/lib/css/blueprint.css'
    = stylesheet_link_tag 'https://unpkg.com/@blueprintjs/icons@^3.0.0/lib/css/blueprint-icons.css'

    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

    = stylesheet_link_tag 'https://fonts.googleapis.com/css?family=Roboto:300,400,500'
    = stylesheet_link_tag 'https://fonts.googleapis.com/icon?family=Material+Icons'

    = stylesheet_link_tag 'https://cdn.jsdelivr.net/npm/instantsearch.css@7.0.0/themes/algolia-min.css'

    = yield :head

  %body.bg-light
    = yield
    = yield :javascripts
