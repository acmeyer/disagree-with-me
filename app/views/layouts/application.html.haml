!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0, shrink-to-fit=no"}
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/

    -# Title
    %title= content_for?(:title) ? yield(:title) : 'Disagree with Me'
    %meta{name: 'og:title', content: "#{content_for?(:title) ? yield(:title) : 'Disagree with Me'}"}
    -# Description
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : ''}"}
    %meta{:name => "og:description", :content => "#{content_for?(:description) ? yield(:description) : ''}"}

    -# %link{:href => "/icons/apple-icon-57x57.png", :rel => "apple-touch-icon", :sizes => "57x57"}/
    -# %link{:href => "/icons/apple-icon-60x60.png", :rel => "apple-touch-icon", :sizes => "60x60"}/
    -# %link{:href => "/icons/apple-icon-72x72.png", :rel => "apple-touch-icon", :sizes => "72x72"}/
    -# %link{:href => "/icons/apple-icon-76x76.png", :rel => "apple-touch-icon", :sizes => "76x76"}/
