%ol.breadcrumb
  %li.breadcrumb-item
    = link_to "Topics", admin_topics_path
  %li.breadcrumb-item.active New Topic

.card
  .card-body
    .d-flex.justify-content-between
      %h3 New Topic

    %hr
    = form_for [:admin, @topic] do |f|
      .row.justify-content-center
        .col-sm-6    
          = render 'form_fields', f: f, topic: @topic
          %hr
          .actions
            = f.submit 'Create', class: 'btn btn-primary btn-block', data: {disable_with: 'Creating...'}
