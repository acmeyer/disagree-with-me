%ol.breadcrumb
  %li.breadcrumb-item
    = link_to "Posts", admin_posts_path
  %li.breadcrumb-item.active Edit Post

.card
  .card-body
    .d-flex.justify-content-between
      %h3 Editing Post #{@post.id}
      .actions
        = link_to 'Show', [:admin, @post], class: 'btn btn-light'

    %hr
    = form_for [:admin, @post] do |f|
      .row.justify-content-center
        .col-sm-6    
          = render 'form_fields', f: f, post: @post
          %hr
          .actions
            = f.submit 'Update', class: 'btn btn-primary btn-block', data: {disable_with: 'Updating...'}
