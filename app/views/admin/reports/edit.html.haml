%ol.breadcrumb
  %li.breadcrumb-item
    = link_to "Reports", admin_reports_path
  %li.breadcrumb-item.active Edit Report

.card
  .card-body
    .d-flex.justify-content-between
      %h3 Editing Report #{@report.id}
      .actions
        = link_to 'Show', [:admin, @report], class: 'btn btn-light'

    %hr
    = form_for [:admin, @report] do |f|
      .row.justify-content-center
        .col-sm-6    
          = render 'form_fields', f: f, report: @report
          %hr
          .actions
            = f.submit 'Update', class: 'btn btn-primary btn-block', data: {disable_with: 'Updating...'}
