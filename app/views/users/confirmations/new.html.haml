.authform.card.mx-auto
  .card-body
    = form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f|
      .lead.text-center= t('views.auth.titles.resend_confirmation_instructions')
      %hr
      = devise_error_messages!
      .form-group
        = f.email_field :email, autofocus: true, autocomplete: 'username', class: 'form-control', placeholder: t('forms.email'), required: true
      = f.submit t('views.auth.resend_instructions'), :class => 'btn btn-primary btn-block', data: { disable_with: t('buttons.sending') }

